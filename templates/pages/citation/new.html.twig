{% extends 'base.html.twig' %}

{% block title %}Devscast - Citation!{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mt-4">Cr√©ation d'une citation</h1>

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.french) }}
                {{ form_widget(form.french) }}
                <div class="form-error">
                    {{ form_errors(form.french) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.english) }}
                {{ form_widget(form.english) }}
                <div class="form-error">
                    {{ form_errors(form.english) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.author) }}
                {{ form_widget(form.author) }}
                <div class="form-error">
                    {{ form_errors(form.author) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_row(form.submit) }}
            </div>

    </div>
    {{ form_end(form) }}
{% endblock %}